<center>
  <h1>Mister-Cocktail</h1>
  <br><br>
  <% @cocktails.each do |cocktail|  %>
    <p>
      <%= link_to "Edit", edit_cocktail_path(cocktail), class: "btn btn-success" %>
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
      <%= link_to "Delete", cocktail_path(cocktail),
        method: :delete,
        data: { confirm: "Are you sure?"}, class: "btn btn-warning" %>
    </p>

    <hr>
  <% end  %>
  <br><br><br>
  <%= link_to "Create new cocktail", new_cocktail_path, class: "btn btn-primary" %>
</center>
